{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "yarn tsx watch src/**/*",
    "start": "yarn tsx src/index.ts",
    "build": "yarn tsc",
    "preview": "yarn build && node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "yarn eslint src/**/*",
    "format": "yarn eslint src/**/* --fix",
    "check:types": "tsc --noEmit",
    "coverage": "vitest run --coverage",
    "coverage:result": "yarn vite preview --outDir ./coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*": "eslint --fix",
    "src/**/*.ts": "tsc-files --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsc-files": "^1.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
