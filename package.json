{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src",
    "build": "rm -rf build && tsc",
    "start": "node build",
    "check:types": "tsc --noEmit",
    "lint": "eslint src/**/* test/**/*",
    "format": "eslint src/**/* test/**/* --fix",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vite preview --outDir ./coverage",
    "prepare": "husky",
    "update": "ncu -u && yarn"
  },
  "lint-staged": {
    "src/**/*": "eslint --fix",
    "test/**/*": "eslint --fix",
    "*.ts": "tsc-files --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.2.5",
    "tsc-files": "^1.1.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
